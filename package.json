    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "chai": "4.3.7",
    "dotenv": "16.1.4",
    "eslint": "8.42.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-promise": "6.1.1",
    "ethers": "5.7.2",
    "hardhat": "2.19.0",
    "hardhat-dependency-compiler": "1.1.3",
    "hardhat-deploy": "0.11.43",
